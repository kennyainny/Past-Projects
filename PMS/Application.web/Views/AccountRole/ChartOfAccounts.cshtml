@model IEnumerable<Application.Web.Models.AccountGroup>

@{
    ViewBag.Title = "ChartOfAccounts";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<ul class="breadcrumb">
    <li class="active">Generate Report</li>
</ul>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="alert">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>Note: </strong>@ViewBag.info
        </div>
        <div class="row-fluid sortable ui-sortable">
            <div class="box span12">
                <div class="box-header well" data-original-title="Contribution Schedule Format">
                    <h2><i class="icon-plus"></i> Chart Of Accounts</h2>
                </div>
                <div class="box-content">
                    <div class="row-fluid">

                        <button class="btn btn-primary" title="Add new record" style="margin-left: 5px;" @*value="A" *@
                                onclick="location.href='@Url.Action("AddGroup")'">
                            <i class="fa fa-plus-circle"></i> Add Group
                        </button>


                        <button class="btn btn-info" title="Post Contribution Schedule"
                                onclick="location.href='@Url.Action("AddLedger")'">
                            <i class="fa fa-share-square-o"></i> Add Ledger
                        </button>

                        <div class="alert">

                            Difference in Opening Balance is Cr <strong>@ViewBag.OpeningBal </strong>
                        </div>



                        <table class="table table-striped table-bordered">
                            <tr>
                                @*<th>
                    @Html.DisplayNameFor(model => model.parent_id)
                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.name)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            { 
                                
                                if (item.parent_id == 0)
                                {

                                    <tr>
                                        @*<td>
                            @Html.DisplayFor(modelItem => item.parent_id)
                        </td>*@
                                        <td style="font-weight:bold">
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                    </tr>
                                }
                                else if (item.parent_id == 1)
                                {

                                    <tr>
                                        @*<td>
                            @Html.DisplayFor(modelItem => item.parent_id)
                        </td>*@
                                        <td style="padding-left:40px">
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @*@Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.id })*@
                                        </td>
                                    </tr>
                                }
                                else
                                {

                                    <tr>
                                        @*<td>
                            @Html.DisplayFor(modelItem => item.parent_id)
                        </td>*@
                                        <td style="padding-left:80px">
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @*@Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.id })*@
                                        </td>
                                    </tr>
                                }
                            }

                        </table>



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

