                                        <td>@Html.EditorFor(model => model[i].EmailID)</td>
                                    </tr>
                                }*@








                            </table>
                            <div style="padding:10px;">
                                <div>

                                    <button class="btn btn-info" id="AssignCheckno" title="Assign Check Number" style="float: right;">
                                        <i class="fa fa-share-square-o"></i> Get Report PDF
                                    </button>
                                </div>
                            </div>
}
                    </div>                  
                </div>
            </div>
        </div>
    </div>
</div>

