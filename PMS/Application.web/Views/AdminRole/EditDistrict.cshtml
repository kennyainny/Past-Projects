@model Application.Web.Models.District

@{
    ViewBag.Title = "Edit District";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ul class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "AdminRole")
        <span class="divider">/</span></li>
    <li>@Html.ActionLink("Manage District", "ManageDistrict", "AdminRole")
        <span class="divider">/</span></li>
    <li class="active">Edit District</li>
</ul>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="alert">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>Note: </strong>@ViewBag.info
        </div>

        <div class="row-fluid sortable ui-sortable">
            <div class="box span12">
                <div class="box-header well" data-original-title="Contribution Schedule Format">
                    <h2><i class="icon-edit"></i> Edit District</h2>
                </div>
                <div class="box-content">
                    <div class="row-fluid">
                        <div class="well form-horizontal span6" style="margin-top: 4px;">
                            <h5 style="margin: 3px;">Modify District Details </h5>
                            <hr style="margin: 3px;" />
                                                        
                            @using (Html.BeginForm("EditDistrict", "AdminRole",
                                        FormMethod.Post, new { id = "SubmitDistrictForm" }))
                            {
                                @Html.AntiForgeryToken()
    
                                @Html.ValidationSummary(false) 

                                @Html.HiddenFor(model => model.Id)
                                @Html.HiddenFor(model => model.DistrictCode)  
                                @Html.HiddenFor(model => model.DistrictName)                                                               
                                                        
                                <div class="control-group" style="margin-bottom: 10px; margin-top: 15px;">
                                    <label class="control-label">Code:</label>
                                    <label class="control-label label marginleft" style="width: 211px;">@Model.DistrictCode</label>
                                </div>

                                <div class="control-group" style="margin-bottom: 10px;">
                                    <label class="control-label">District</label>
                                    <label class="control-label label marginleft" style="width: 211px;">@Model.DistrictName</label>
                                </div>
                                    
                                <div class="control-group" style="margin-top: 15px;">
                                    <label class="control-label">Address:</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => model.Address1)
                                        @Html.ValidationMessageFor(model => model.Address1)
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">City:</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => model.City)
                                        @Html.ValidationMessageFor(model => model.City)
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">State:</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => model.State)
                                        @Html.ValidationMessageFor(model => model.State)
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Manager:</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => model.Manager)
                                        @Html.ValidationMessageFor(model => model.Manager)
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Phone No:</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => model.PhoneNo)
                                        @Html.ValidationMessageFor(model => model.PhoneNo)
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Email:</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => model.Email)
                                        @Html.ValidationMessageFor(model => model.Email)
                                    </div>
                                </div>                                                                    
                               
                                <div class="control-group">
                                    <label class="control-label">Fax:</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => model.Fax)
                                        @Html.ValidationMessageFor(model => model.Fax)
                                    </div>
                                </div>                                
                                <div class="control-group">
                                    <label class="control-label">Contact:</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => model.Contact)
                                        @Html.ValidationMessageFor(model => model.Contact)
                                    </div>
                                </div>   
                                <div class="form-actions" style="margin-bottom: 0px;">
                                    <button class="btn btn-primary" title="Update record" type="submit">Update</button>
                                    <button class="btn btn-default" title="Go to previous page" type="button"
                                        onclick="location.href='@Session["ReturnUrl"].ToString()'">
                                        Cancel</button>
                                    @*onclick="location.href='@Url.Action("ContributionSchedule")'">Cancel</button>*@
                                    @*@Session["ReturnUrl"]
                                </div>*@
                                </div>    
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>