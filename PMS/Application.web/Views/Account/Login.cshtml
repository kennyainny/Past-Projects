@model Application.Web.Models.LoginModel

@{
    ViewBag.Title = "Log In Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Log in page">
    <meta name="author" content="ETS Nigeria">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
</head>
<body class="">
    <div class="navbar">
        <div class="navbar-inner">
            <ul class="nav pull-right">
            </ul>
            <a class="brand" href="#"><span class="second">AGMBS</span></a>
            @*<span class="first">Assemblies of God Ministers' Benefit Scheme</span>*@
        </div>
    </div>

    <div class="row-fluid">
        <div class="dialog">
            <div class="block">
                <p class="block-heading">Please login with your Username and Password</p>
                <div class="block-body">
                    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)        
            
                        <label>Username</label>@Html.TextBoxFor(m => m.UserName, new { @class = "span12" })
                        @Html.ValidationMessageFor(m => m.UserName)           
                        <label>Password</label>@Html.PasswordFor(m => m.Password, new { @class = "span12" })
                        @Html.ValidationMessageFor(m => m.Password)
                        <input type="submit" value="Log in" class="btn btn-primary pull-right" />            
                        <label class="remember-me">@Html.CheckBoxFor(m => m.RememberMe)  Remember me</label>
@*@Html.LabelFor(m => m.RememberMe, , "", new { @class="span12"} new { @class="remember-me"})*@
                        <div class="clearfix"></div>
@*<p>
        @Html.ActionLink("Register", "Register") if you don't have an account.
    </p>*@
                    }
                </div>
            </div>
            @*<p class="pull-right" style=""><a href="http://www.portnine.com" target="blank">Theme by Portnine</a></p>
        <p><a href="reset-password.html">Forgot your password?</a></p>*@
        </div>
    </div>

@*<section class="social" id="socialLoginForm">
    <h2>Use another service to log in.</h2>
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</section>*@

@section Scripts {
    @Scripts.Render("~/bundles/bootstrapjs")
}
</body>
</html>